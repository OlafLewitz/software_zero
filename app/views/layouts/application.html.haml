/[if IEMobile 7] <html class="no-js iem7">
/[if lt IE 9] <html class="no-js lte-ie8">
/[if (gt IE 8)|(gt IEMobile 7)|!(IEMobile)|!(IE)] <html class="no-js" lang="en">
%head
  %meta{:charset => "utf-8"}/
  %title= Env['SITE_NAME']

  / Viewport slides: http://t.co/dKP3o1e
  %meta{:content => "True", :name => "HandheldFriendly"}/
  %meta{:content => "320", :name => "MobileOptimized"}/
  %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
  %link{:href => "/favicon.png", :rel => "icon"}/
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags

  / Fonts from Google"s Web font directory at http://google.com/webfonts
  %link{:href => "http://fonts.googleapis.com/css?family=PT+Serif:regular,italic,bold,bolditalic", :rel => "stylesheet", :type => "text/css"}/
  %link{:href => "http://fonts.googleapis.com/css?family=PT+Sans:regular,italic,bold,bolditalic", :rel => "stylesheet", :type => "text/css"}/
%body{:class => 'collapse-sidebar'}
  %header{:role => "banner"}
    %hgroup
      %h1
        = link_to Env['SITE_NAME'], root_url(:host => Env['BASE_DOMAIN'])
        - if Env['SITE_MESSAGE']
          &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
          %span.message
            = Env['SITE_MESSAGE']
      %h2
        = Env['SITE_TAGLINE']

  %nav{:role => "navigation"}
    -#%form{:action => "http://google.com/search", :method => "get"}
    -#  %fieldset{:role => "search"}
    -#    %input{:name => "q", :type => "hidden", :value => "site:openyourproject.org"}/
    -#    %input.search{:name => "q", :placeholder => "Search", :results => "0", :type => "text"}/
    %ul.main-navigation
      - if Env['CREATE_PAGES']
        %li
        = link_to 'Open Now', new_page_url(:host => Env['BASE_DOMAIN'])
      %li
        = link_to (Env['CREATE_PAGES'] ? 'Collections' : 'Home'), collections_url(:host => Env['BASE_DOMAIN'])
  #main
    #content
      %div
        %article
          = yield

      %aside.sidebar
        %section
        -#%h1 Top Tags
        -##viz-tags
        -#%script{:src => "/javascripts/viz/tags.js", :type => "text/javascript"}
        -#%section
        -#  %h1 Top Collections
        -#  %a{:href=>'/collections'}
        -#    #viz-collections
        -#  %script{:src => "/javascripts/viz/collections.js", :type => "text/javascript"}
        -#%section
        -#  %h1 Tags
        -#  %ul#pages
        -#    %li.post
        -#      %a{:href => "/pub/Human_Potential/index.html"} Human Potential
        -#    %li.post
        -#      %a{:href => "/pub/Open_Source_Transformation/index.html"} Open Source Transformation
        -#    %li.post
        -#      %a{:href => "/pub/Quotations/index.html"} Quotes
        -#    %li.post
        -#      %a{:href => "/pub/Spiritual_Transhumanism/index.html"} Spiritual Transhumanism
        -#    %li.post
        -#      %a{:href => "/pub/The_Trust_Exchange_is_Landing/index.html"} The Trust Exchange is Landing



  %footer
    Powered by
    = succeed "," do
      %a{:href => 'http://enlightenedstructure.org/Software_Zero/'} Enlightened Structure Software Zero

    responsive design by
    = succeed "." do
      %a{:href => "http://octopress.org"} Octopress

  /
    Env['RACK_ENV'] = #{Env['RACK_ENV'].inspect}
    Rails.env = #{Rails.env.inspect}
    Env['CREATE_PAGES'] = #{Env['CREATE_PAGES'].inspect}

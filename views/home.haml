.open
  .action
    Enter a project URL
    - form_for @fork, '/' do |f|
      %div
        = f.error_messages
      %div
        = f.text_field :url, :class => "big", :placeholder => 'www.change-the-world.org', :value => @fork.url || ('http://en.wikipedia.org/wiki/Technological_singularity' if form_pre_filled?)
      %div
        = f.text_field :username, :placeholder => 'Your name', :value => @fork.username || ('John Q. Public' if form_pre_filled?)
      %div
        = f.text_field :topic, :placeholder => 'Topic: help categorize this content for yourself and others', :value => @fork.topic || ('Singularity' if form_pre_filled?)
      %div
        = f.submit 'Open Now', :class => 'big'
